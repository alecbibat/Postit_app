<%= render "shared/header", title: "Register" %>

<%= render "shared/error", obj: @user %>

<div class="span8 well">

<%= form_for @user do |f| %>

<div class="control-group">
<%= f.label :username %>
<%= f.text_field :username %>
</div>

<div class="control-group">
<%= f.label :password %>
<%= f.password_field :password %>
</div>

<div class="control-group">
<%= f.submit "Register", :class => "btn btn-primary" %> 
</div>

<% end %>
</div>