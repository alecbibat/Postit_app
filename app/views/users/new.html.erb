<%= render "shared/header", title: "Register" %>

<div class="span8 well">
  <%= form_tag "/register" do %>

  <div class="control-group">
  <%= label_tag :username %>
  <%= text_field_tag :username, params[:username] %>
  </div>

  <div class="control-group">
  <%= label_tag :password %>
  <%= text_field_tag :password, params[:password] %>
  </div>

  <div class="control-group">
  <%= submit_tag %>
  </div>

  <% end %>
</div>