<%= render "shared/header", title: "All Posts" %>

<% @post.each do |post| %>
  <div class="row">
    <div class="span8 well">
      <% post.categories.each do |category| %>
      <span class="badge">
        <%= category.name %>
      </span>
      <% end %>
    <h3><%= link_to post.title, fix_url(post.url) %></h3>
    <p><%= post.description %></p>
    <span class="quiet">posted by <%= link_to("#{post.user.username}", user_path(post.user)) %> at <%= datetime(post.created_at) %> </span>

    <%= link_to("edit", edit_post_path(post)) %>



    <small>
     <span>
        <p><%= link_to("#{post.comments.size} comments", post_path(post)) %></p>
     </span>
    </small>
    </div>
  </div>
<% end %>