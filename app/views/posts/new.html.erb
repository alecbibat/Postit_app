<h3>Make a new post</h3>

  <%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <p><%= f.submit "Create Post", :class => "btn btn-primary" %></p>


<% end %>