<%= render "shared/header", title: "Log in" %>

<%= form_tag "/sessions" do %>

<%= label_tag :username %>
<%= text_field :username, params[:username] || "" %>

<%= label_tag :password %>
<%= password_field_tag :password, params[:password] || "" %>

<%= submit_tag "Submit", class: "btn btn-primary" %>

<% end %> 